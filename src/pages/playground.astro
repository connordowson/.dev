---
import BaseLayout from "@layouts/Base.astro";
import Section from "@components/Section.astro";
const maxWidth = "3xl";
const playgroundLinks = await Astro.glob("./playground/*/*.mdx");
---

<BaseLayout title="Connor Dowson | Playground" maxWidth={maxWidth}>
  <Section class={`w-full max-w-${maxWidth} mt-24 md:px-4 mx-auto`}>
    <h1 class="dark:text-emerald-400 text-emerald-500">Playground</h1>
    <p>Fun little experiments that don't have a home anywhere else.</p>

    <ul>
      {
        playgroundLinks.map(({ frontmatter, url }) => (
          <li class="prose dark:prose-dark max-w-none">
            <a href={url}>
              <h2>{frontmatter.title}</h2>
            </a>

            <p>{frontmatter.description}</p>
          </li>
        ))
      }
    </ul>
  </Section>
</BaseLayout>
