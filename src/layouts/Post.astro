---
import BaseLayout from "./Base.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout frontmatter={Astro.props.frontmatter}>
  <article>
    <header>
      <h1>{frontmatter.title}</h1>
    </header>

    <slot />
  </article>
</BaseLayout>

<style lang="scss">
  article {
    width: 46rem;
    margin: 10em auto 0;
    line-height: 1.7;
  }

  article :global(h1),
  article :global(h2),
  article :global(h3),
  article :global(h4),
  article :global(h5),
  article :global(h6) {
    color: var(--emerald-500);
    border-bottom: 1px solid var(--slate-700);
    margin-bottom: 1em;
    padding: 0.75rem 0;
  }

  article :global(pre) {
    padding: 1em;
    border-radius: 0.5em;
    border: 1px solid var(--slate-700);
    margin: 0;
    z-index: 2;
  }

  article :global(code:not(pre code)) {
    font-family: "Fira Code";
    padding: 0em 0.4em;
    border-radius: 0.5em;
    font-size: 0.9em;
    display: inline-block;
    border: 1px solid var(--slate-700);
    background-color: #1e1e1e;
    color: #b7c5d3;
  }

  article :global(.remark-code-title + pre) {
    border-radius: 0 0.5em 0.5em 0.5em;
  }

  article :global(.remark-code-title) {
    background-color: var(--emerald-200);
    color: var(--emerald-800);
    display: inline-block;
    font-family: Fira Code;
    font-weight: 400;
    padding: 0.5em 0.75em;
    border-radius: 0.5em 0.5em 0 0;
  }

  article :global(table) {
    display: block;
    width: max-content;
    max-width: 100%;
    overflow: auto;
    border-spacing: 0;
    border-collapse: collapse;
    margin-bottom: 1em;
  }
  article :global(tr) {
    border-top: 1px solid var(--slate-600);

    &:nth-child(2n) {
      background-color: var(--slate-700);
    }
  }
  article :global(th, td) {
    padding: 6px 13px;
    border: 1px solid var(--slate-600);
  }

  article :global(blockquote) {
    margin-bottom: 1em;
    padding: 0 1em;
    border-left: 4px solid var(--slate-600);
    margin-left: 0;
  }

  article :global(hr) {
    height: 2px;
    border: 0;
    padding: 0;
    background-color: var(--slate-700);
  }

  article :global(> ul, ol) {
    list-style-position: inside;
    padding-left: 0;
  }
</style>
